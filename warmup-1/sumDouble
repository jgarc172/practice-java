public int sumDouble(int a, int b) {
  // solution from description:
  // return their sum
  // Unless the two values are the same, then return double their sum
  
  // Translation to code:
  // their sum ->  a + b
  // the two values are the same -> a == b
  // double their sum -> 2 * (a + b)
  
  // solution:
  // sum is a + b
  // if the two values are the same, then return double the sum
  // else return the sum

  
  int sum = a + b;
  if (a == b){
    sum = 2 * sum;
  }
  return sum;
}
